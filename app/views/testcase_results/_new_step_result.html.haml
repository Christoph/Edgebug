.step_description
  .number
    = i
  %p
    = f.object.teststep.description
  %p
    - id = "res_#{rand(1000000)}"
    
    = f.hidden_field :result, id: id
    = f.hidden_field :teststep_id

    = icon_url icon: "tick", text: "mark successful", url: "javascript:markItemAsSuccessful('#{id}');"
    = icon_url icon: "cross", text: "mark failed", url: "javascript:markItemAsFailed('#{id}');"
%h1
  Execute
  %i= @testcase_result.testcase.title

- i = 0
- form_for(@testcase_result) do |f|
  - f.fields_for :teststep_results do |builder|
    = render 'new_step_result', {:f => builder, :i => i += 1}
  = f.hidden_field :testcase_id 
  = button_url icon: :arrow_left, text: 'Back', url: testcases_path
  = button_url icon: :disk, text: 'Save', js_url: "$('form').submit();"
